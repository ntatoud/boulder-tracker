  // updatedUsers    User[]   @relation("UpdatedByUser")

  // boulders BoulderStatus[]
}

model VerificationToken {
  token   String   @unique
  userId  Int
  expires DateTime

  @@unique([token, userId])
}

model Boulder {
  id            Int    @id @default(autoincrement())
  name          String
  grade         String
  location      String
  tags          String
  statusByUsers String @default("")
}

